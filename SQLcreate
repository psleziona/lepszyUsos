-- Tworzenie bazy danych i uzytkownika
create database lepszyUSOS;

CREATE USER 'lepszyUSOS'@'192.168.192.*' IDENTIFIED BY 'a9d8x37WQrhdgSlH';

GRANT ALL PRIVILEGES ON lepszyUSOS.* TO 'lepszyUSOS' IDENTIFIED BY a9d8x37WQrhdgSlH;

FLUSH PRIVILEGES;


-- Tworzenie tabeli
CREATE TABLE zajecia(ID_p int auto_increment primary key not null, nazwa varchar(20), opis varchar(500), da
ta date, czas_rozp time, czas_zakon time);

CREATE TABLE uzytkownicy(ID_u int auto_increment primary key not null, email varchar(30), password varchar(50), imie varchar(20), nazwisko varchar(20), tytul varchar(20), telefon varchar(30), activity varchar(1));

CREATE TABLE przypisania(ID_a int auto_increment primary key not null, ID_p int not null, ID_u int not null,
FOREIGN KEY (ID_p) REFERENCES zajecia(ID_p),
FOREIGN KEY (ID_u) REFERENCES uzytkownicy(ID_u));
